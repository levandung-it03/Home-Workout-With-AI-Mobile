<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_white_round_corner">

    <TextView
        android:id="@+id/page_home_dialog_sessionList_layoutItem_ordinal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/normal_grey"
        android:text="4"
        android:gravity="center"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/page_home_dialog_sessionList_layoutItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="0dp"
            android:text="Schedule Name Schedule Name Schedule Name Schedule Name Schedule Name Schedule Name" />

        <TextView
            android:id="@+id/page_home_dialog_sessionList_layoutItem_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/normal_grey"
            android:textStyle="italic"
            android:paddingTop="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:text="Schedule Description Schedule Description Schedule Description Schedule Description Schedule Description"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:padding="5dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/page_home_dialog_sessionList_layoutItem_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"
            android:text="BEGINNER"/>

        <TextView
            android:id="@+id/page_home_dialog_sessionList_layoutItem_muscles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/normal_grey"
            android:textStyle="italic"
            android:text="Chest - Triceps - Shoulders - Abs"/>
    </LinearLayout>
</LinearLayout>