<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_white_round_corner">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/page_availableSched_layoutItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="0dp"
            android:text="Schedule Name Schedule Name Schedule Name Schedule Name Schedule Name Schedule Name" />

        <TextView
            android:id="@+id/page_availableSched_layoutItem_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/normal_grey"
            android:textStyle="italic"
            android:paddingTop="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:text="Schedule Description Schedule Description Schedule Description Schedule Description Schedule Description"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:padding="5dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/page_availableSched_layoutItem_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"
            android:text="BEGINNER"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/page_availableSched_layoutItem_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="80â‚µ"
                android:background="@color/normal_gold"
                android:textColor="@color/white"
                android:paddingLeft="4dp"
                android:paddingRight="4dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>