<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_login"
    tools:context=".fragments.RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageButton
            android:id="@+id/page_register_prevFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@drawable/bg_back_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Workout"
            android:textSize="48sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nerko_one"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/page_register_basicInfoFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:padding="20dp"
                android:background="@drawable/block_white_round_corner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/page_register_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:background="@drawable/edt_white_states"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/normal_grey"
                    android:textColor="@color/black"
                    android:hint="First Name"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/page_register_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:background="@drawable/edt_white_states"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/normal_grey"
                    android:hint="Last Name"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/page_register_dob"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:background="@drawable/edt_white_states"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:textColorHint="@color/normal_grey"
                    android:hint="Date of Birth"
                    android:layout_marginBottom="10dp" />

                <Spinner
                    android:id="@+id/page_register_genderSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:background="@drawable/edt_white_states"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:hint="Birthday: date/month/year"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/page_register_emailEdt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:background="@drawable/edt_white_states"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/normal_grey"
                    android:textColor="@color/black"
                    android:hint="Email"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:id="@+id/page_register_passEdt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:background="@drawable/edt_white_states"
                    android:textColorHint="@color/normal_grey"
                    android:hint="Password"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:layout_marginBottom="10dp"  />

                <EditText
                    android:id="@+id/page_register_rePassEdt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:background="@drawable/edt_white_states"
                    android:textColorHint="@color/normal_grey"
                    android:hint="Retype Password"
                    android:textColor="@color/black"
                    android:inputType="textPassword"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/page_register_showPassChkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show Password"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/page_register_submitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="Submit"
                    android:textSize="16sp"
                    android:background="@drawable/btn_black_grey_states"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/page_register_otpFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="@drawable/block_white_round_corner">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Confirmation"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/page_register_otpCurrentAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60s left"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:textColor="@color/normal_grey"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/page_register_otpFromEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="30sp"
                    android:background="@drawable/edt_white_states"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/normal_grey"
                    android:hint="OTPCODE"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/page_register_registerBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="Register"
                    android:textSize="16sp"
                    android:background="@drawable/btn_black_grey_states"
                    app:backgroundTint="@null"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/page_register_resendOtpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:text="Resend OTP"
                    android:textSize="16sp"
                    android:background="@drawable/btn_white_grey_states"
                    app:backgroundTint="@null" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
